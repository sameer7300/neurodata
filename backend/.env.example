# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DB_NAME=neurodata_db
DB_USER=neurodata_user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Blockchain Configuration
WEB3_PROVIDER_URL=https://polygon-mumbai.g.alchemy.com/v2/your-api-key
PRIVATE_KEY=your-private-key-for-contract-deployment
CONTRACT_ADDRESS_NEUROCOIN=
CONTRACT_ADDRESS_MARKETPLACE=
CONTRACT_ADDRESS_ML_LOGGER=

# IPFS Configuration
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_API_KEY=your-ipfs-api-key
IPFS_API_SECRET=your-ipfs-api-secret

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/neurodata.log

# File Upload Settings
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_DATASET_EXTENSIONS=.csv,.json,.xlsx,.parquet,.h5

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Development Settings
DJANGO_SETTINGS_MODULE=neurodata.settings.development
